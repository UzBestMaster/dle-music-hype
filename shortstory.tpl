<div class="track-item fx-row fx-middle js-item" 
data-track="[xfvalue_adres]" data-title="[xfvalue_nazvanie-pesni]" data-artist="[xfvalue_ispolnitel]" data-img="{image-1}"
>
	<div class="track-img img-fit">
		<img src="{image-1}" alt="{title}">
		<div class="track-play fx-col fx-center anim js-play"><span class="fas fa-play-circle"></span></div>
	</div>
	<a class="track-desc fx-1" href="{full-link}">
		<div class="track-title nowrap">[xfvalue_nazvanie-pesni]</div>
		<div class="track-subtitle nowrap">[xfvalue_ispolnitel]</div>
	</a>
	<div class="track-time">[xfvalue_dlitelnost]</div>
	<a href="[xfvalue_adres]" download class="track-dl anim"><span class="fal fa-arrow-circle-down"></span></a>
	[group=5]<div class="track-fav fx-col fx-center anim js-login"><span class="fal fa-heart"></span></div>[/group]
	[not-group=5]
	[add-favorites]<div class="track-fav fx-col fx-center anim" title="В избранное"><span class="fal fa-heart"></span></div>[/add-favorites]
	[del-favorites]<div class="track-fav fx-col fx-center anim" title="Из избранного"><span class="fas fa-heart"></span></div>[/del-favorites]
	[/not-group]
</div>